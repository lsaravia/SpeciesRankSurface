keywords = {Disturbances,Spatial models,Species richness,dispersal,island biogeography,neutral theory},
month = mar,
number = {3–4},
pages = {211--228},
shorttitle = {Space matters - Novel developments in plant ecolog},
title = {{Spatial processes that maintain biodiversity in plant communities}},
