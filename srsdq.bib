journal = {Oikos},
month = oct,
pages = {477--485},
title = {{Multifractal spatial distribution of epilithic microphytobenthos on a Mediterranean rocky shore}},
url = {http://onlinelibrary.wiley.com/doi/10.1111/oik.01503/abstract},
volume = {124},
year = {2014}
}
